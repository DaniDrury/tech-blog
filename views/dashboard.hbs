{{#each posts as |post| }}
<div class="card mb-2 border-3 rounded-3 border-secondary post-card" data-id="{{post.id}}">
  <div class="card-header d-flex justify-content-between bg-info">
    <h2>
      {{post.name}}
    </h2>
    <p class="pt-2">Posted by {{post.user.name}} on {{format_date post.createdAt}}</p>
  </div>
  <div class="card-body">
      <p>
        {{post.body}}
      </p>
  </div>
</div>
{{/each}}

<div></div>

<div class="d-flex justify-content-center">
  <button id="newPostBtn" class="rounded-pill px-3 py-1 bg-info fw-bold">New Post</button>
</div>

<script src="./js/dashboard.js"></script>