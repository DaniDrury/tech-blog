<div class="container-fluid h-75 d-flex align-items-center justify-content-center">
  <div class="border border-3 border-secondary rounded-3 p-4">
    <h2 class="pb-2">Signup</h2>
    <form>
      <div class="mb-2">
        <label for="username-signup">User Name:</label>
        <input class="form-control" type="text" id="username-signup" />
      </div>
      <div class="mb-2">
        <label for="email-signup">Email:</label>
        <input class="form-control" type="text" id="email-signup" />
      </div>
      <div class="mb-2">
        <label for="password-signup">Password:</label>
        <input class="form-control" type="password" id="password-signup" />
      </div>
      <div class="mb-2">
        <button class="btn btn-primary my-1" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>