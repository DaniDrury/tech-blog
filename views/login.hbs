<div class="container-fluid h-75 d-flex align-items-center justify-content-center">
  <div class="border border-3 border-secondary rounded-3 p-4">
    <h2 class="pb-2">Login</h2>
    <form>
      <div class="mb-2">
        <label for="username-login">User Name:</label>
        <input class="form-control" type="text" id="username-login" />
      </div>
      <div class="mb-2">
        <label for="email-login">Email:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>
      <div class="mb-2">
        <label for="password-login">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>
      <div class="mb-2">
        <button class="btn btn-primary my-1" type="submit">Login</button>
      </div>
    </form>
    <div class="text-center pt-2">
      <a href="/signup" class="pt-3">Signup for an Account</a>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>