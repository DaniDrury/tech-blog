{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
  </div>
  <div class="flex">
    <div>
      <p>
        {{post.body}}
      </p>
    </div>
    <div>
      <p>From: {{post.user.name}} Created on: {{format_date post.createdAt}}</p>
    </div>
  </div>
</div>
{{/each}}